{
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "bracketSameLine": true,
    "printWidth": 120,
    "proseWrap": "preserve",
    "requirePragma": false,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false,
    "vueIndentScriptAndStyle": true,
    "xmlSelfClosingSpace": false,
    "xmlWhitespaceSensitivity": "ignore",
    "overrides": [
        {
            "files": "*.ditamap",
            "options": {
                "printWidth": 300
            }
        },
        {
            "files": "*.dita",
            "options": {
                "xmlWhitespaceSensitivity": "strict",
                "printWidth": 400
            }
        }
    ]
}
