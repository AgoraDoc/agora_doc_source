{
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "bracketSameLine": true,
    "printWidth": 120,
    "proseWrap": "preserve",
    "requirePragma": false,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false,
    "vueIndentScriptAndStyle": true,
    "xmlSelfClosingSpace": false,
    "xmlWhitespaceSensitivity": "strict",
    "overrides": [
        {
            "files": "*.dita*",
            "options": {
                "printWidth": 400
            }
        }
    ]
}
